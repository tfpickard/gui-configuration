{
  "layer": "top",
  "position": "bottom",
  "modules-left": [
    "battery",
    "custom/batterysaver",
    "cpu",
    "custom/cputemp",
    "memory",
    "disk",
  ],
  "modules-center": [
    "clock",
  ],
  "modules-right": [
    "network",
    "bluetooth",
    "backlight",
    "pulseaudio#mic",
    "pulseaudio",
  ],
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": "<b>{icon} </b>",
    "format-full": "<span color='#00ff00'><b>{icon}</b></span>",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "tooltip-format": "{timeTo}\n{capacity} % | {power} W",
  },
  "custom/batterysaver": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/battsaver-toggle getdata",
    "on-click": "~/.config/waybar/scripts/battsaver-toggle save",
    "on-click-right": "~/.config/waybar/scripts/battsaver-toggle default",
    "on-click-middle": "~/.config/waybar/scripts/battsaver-toggle performance",
    "interval": "once",
    "return-type": "json",
    "signal": 5,
  },
  "cpu": {
    "format": "{usage}% ",
    "on-click": "~/bin/term btop"
  },
  "custom/cputemp": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/cputemp",
    "interval": 10,
    "return-type": "json",
  },
  "memory": {
    "format": "{}% "
  },
  "disk": {
    "interval": 600,
    "format": "{percentage_used}% ",
    "path": "/"
  },
  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%A, %B %d, %Y (%R)}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "network": {
    "format-wifi": "  {bandwidthDownBits}",
    "format-ethernet": " {bandwidthDownBits}",
    "format-disconnected": "",
    "format-linked": "",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)   \n{ipaddr} | {frequency} MHz{icon} \n {bandwidthDownBits}  {bandwidthUpBits} ",
    "tooltip-format-ethernet": "{ifname}  | \n{ipaddr} | {frequency} MHz{icon} \n {bandwidthDownBits}  {bandwidthUpBits} ",
    "tooltip-format-disconnected": "Not Connected to any type of Network",
    "on-click": "networkmanager_dmenu"
  },
  "bluetooth": {
    "format-on": "",
    "format-off": "",
    "format-disabled": "",
    "format-connected": "<b> {device_alias}</b>",
    "format-connected-battery": " {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "rofi-bluetooth",
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "on-scroll-down": "~/bin/brightness up",
    "on-scroll-up": "~/bin/brightness down",
    "smooth-scrolling-threshold": 1,
  },
  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "on-click": "pactl set-source-mute 0 toggle",
    "on-scroll-down": "pactl set-source-volume 0 -1%",
    "on-scroll-up": "pactl set-source-volume 0 +1%",
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        ""
      ]
    },
    "on-click": "~/bin/pactl",
    "on-click-middle": "pavucontrol",
    "on-click-right": "myxer",
    "on-scroll-up": "~/bin/volume up",
    "on-scroll-down": "~/bin/volume down",
    "smooth-scrolling-threshold": 1,
  },
}
