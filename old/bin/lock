	# 	--ring-wrong-color "$color5" \
	# 	--ring-ver-color "$color3" \
	# 	--line-uses-ring \
	# 	--line-color 00000000 \
	# 	--font 'Comic Code Ligatures:40' \
	# 	--text-color "$color500" \
	# 	--text-clear-color "$color200" \ #"$color2" \
	# 	--text-wrong-color "$color200" \ #"$color5" \
	# 	--text-ver-color "$color400" \ #"$color4" \
	# 	--separator-color "$background66" \
